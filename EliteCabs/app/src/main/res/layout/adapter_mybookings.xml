<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/cablist"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:contentPadding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tofrom"
        android:fontFamily="@font/gotham"
        android:drawablePadding="6dp"
        android:drawableLeft="@drawable/ic_location_on_light_blue_24dp"
        android:text="Ranchi Interntional Airpot -> Kanpur Central Museum"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="@color/colorPrimaryDark"
        />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

        android:layout_marginTop="23dp"
            android:orientation="horizontal"
            android:weightSum="100">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:layout_marginTop="7dp"
                android:orientation="vertical">






                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/starttime"
                    android:layout_marginTop="9dp"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/ic_access_alarm_black_24dp"
                    android:fontFamily="@font/gotham"
                    android:text="9:00AM - 12:30PM"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_date_range_light_blue_24dp"
                    android:fontFamily="@font/gotham"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/date"
                    android:text="20-2-2020"
                    android:textColor="#3C3A3A"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham"
                    android:text="Seat No-A1"
                    android:textSize="12dp"
                    android:id="@+id/seatno"

                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8dp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gotham"
                        android:id="@+id/cabtype"
                        android:text="Sports Utility Vechicle(1+5)"/>


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham"
                    android:gravity="center"
                    android:id="@+id/carmodel"
                    android:drawablePadding="7dp"
                    android:layout_marginTop="7dp"
                    android:textSize="12dp"
                    android:textAllCaps="true"
                    android:text="Cab Detail Model No"
                    android:textColor="#F50057"
                    />
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham"
                    android:gravity="center"
                    android:id="@+id/cabno"
                    android:drawablePadding="7dp"
                    android:layout_marginTop="7dp"
                    android:textSize="12dp"
                    android:textAllCaps="true"

                    android:text="JH-1203"
                    android:textColor="#0E0E0E"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham"
                    android:gravity="center"
                    android:id="@+id/cabcolor"
                    android:drawablePadding="7dp"
                    android:layout_marginTop="7dp"
                    android:textSize="12dp"

                    android:text="White"
                    android:textColor="#FF9100"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
              android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="â‚¹ 600.00"
                    android:id="@+id/seatprice"
                    android:textAlignment="textEnd"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#f5a622"
                    />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/delete"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/cary" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
